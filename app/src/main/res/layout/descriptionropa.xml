<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ropaGeneral"
        android:layout_width="354dp"
        android:layout_height="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ListView
        android:id="@+id/listPrendas"
        android:layout_width="302dp"
        android:layout_height="384dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.874" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="348dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.299">

        <Button
            android:id="@+id/button"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Tintoreria"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Lavanderia"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Planchado"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Tintoreria E"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Costura"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/regreso"
        android:layout_width="36dp"
        android:layout_height="33dp"
        android:background="@drawable/ic_espaldar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        app:srcCompat="@drawable/ic_espaldar" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tintoreria"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

</androidx.constraintlayout.widget.ConstraintLayout>
