<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ropaGeneral"
        android:layout_width="354dp"
        android:layout_height="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <Button
        android:id="@+id/verCesto"
        android:layout_width="329dp"
        android:layout_height="57dp"
        android:drawableLeft="@drawable/ic_cesta"
        android:backgroundTint="@color/colorPrimary"

        android:drawablePadding="45dp"
        android:text="Ver cesto             $5.00"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ListView
        android:id="@+id/listPrendas"
        android:layout_width="311dp"
        android:layout_height="438dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.791">


    </ListView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="352dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.224">

        <Button
            android:id="@+id/tintoreria"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Tintoreria"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />

        <Button
            android:id="@+id/lavanderia"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Lavanderia"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />

        <Button
            android:id="@+id/planchado"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Planchado"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />

        <Button
            android:id="@+id/tintoreriaE"
            android:layout_width="73dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Tintoreria E"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />

        <Button
            android:id="@+id/costura"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Costura"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/regreso"
        android:layout_width="36dp"
        android:layout_height="33dp"
        android:background="@drawable/ic_espaldar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045"
        app:srcCompat="@drawable/ic_espaldar" />

    <TextView
        android:id="@+id/actual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Tintoreria"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.289" />


</androidx.constraintlayout.widget.ConstraintLayout>
